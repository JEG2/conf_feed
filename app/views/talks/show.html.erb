<h1><%= @talk.title %></h1>

<div class="notes">
  <%= form_for(@note, url: [@conference, @talk, @note]) do |f| %>
    <%= f.text_area :body, cols: 100, rows: 6 %>
    <%= f.submit "Add Note" %>
  <% end %>

  <% @notes.each do |note| %>
    <div class="note">
      <div class="byline"><%= note.user.email %> at <%= time_ago_in_words note.created_at %></div>
      <div class="body"><%= fancy_format note.body %></div>
    </div>
  <% end %>

  <%= will_paginate @notes %>
</div>
